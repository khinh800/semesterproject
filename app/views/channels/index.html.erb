<p id="notice"><%= notice %></p>
<div class="col-md-8 col-md-offset-2">

<h1>Channels</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @channels.each do |channel| %>
      <tr data-link="<%= channel_path(channel, channel_history: channel_path(@channels)) %>" class="clickable-row" id=" "channels<%= channel.id%>">
        <td><%= channel.name %></td>
        <td><%= link_to 'Show', channel %></td>
        <td><%= link_to 'Edit', edit_channel_path(channel) %></td>
        <td><%= link_to 'Destroy', channel, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>

  </tbody>
</table>

<br>

<%= link_to 'New Channel', new_channel_path %>
</div>